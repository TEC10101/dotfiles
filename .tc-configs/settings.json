{
  /*
    Angular Essentials
    */
  "editor.autoIndent": "full",
  "editor.codeLens": false,
  // "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorStyle": "line",
  // "editor.fontSize": 16,
  // "editor.fontFamily": "Dank Mono, Operator Mono, Fira Code, Inconsolata",
  "editor.fontLigatures": true,
  // "editor.letterSpacing": 0.5,
  "editor.lineHeight": 20,
  // "editor.minimap.enabled": false,
  // "editor.multiCursorModifier": "ctrlCmd",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
  "workbench.colorTheme": "Material Theme Palenight",
  "git.enableSmartCommit": true,
  "materialTheme.accent": "Sky",
  "workbench.colorCustomizations": {
    "[Material Theme Palenight]": {
      "sideBar.foreground": "#bfbfbf",
      "gitDecoration.ignoredResourceForeground": "#c253c2",
      "panel.border": "#383855",
      "sideBar.border": "#383855",
      "editor.selectionBackground": "#6d9e8e6c",
      "tab.inactiveForeground": "#bfbfbf",
      "editorOverviewRuler.addedForeground": "#81b88b",
      "editorGutter.addedBackground": "#81b88b",
      "editorGutter.modifiedBackground": "#82aaff90",
      "editorGroup.border": "#383855",
      "minimapGutter.addedBackground": "#00000000",
      "minimapGutter.deletedBackground": "#00000000",
      "minimapGutter.modifiedBackground": "#00000000",
      "sideBarSectionHeader.border": "#383855",
      "peekView.border": "#cc4e05",
      "peekViewTitle.background": "#4b250f"
    }
  },
  "editor.tokenColorCustomizations": {
    "[Material Theme Palenight]": {
      "strings": "#63c087",
      // "punctuation.definition.parameters.begin": "#ff0000"
      "textMateRules": [
        {
          "scope": [
            "storage.type.ts",
            "constructor"
          ],
          "settings": {
            "foreground": "#2f74c2",
            "fontStyle": "italic bold"
          }
        },
        {
          "scope": "variable.language.super.ts",
          "settings": {
            "foreground": "#2f74c2",
            "fontStyle": "italic bold"
          }
        },
        {
          // text itself, comment block
          "scope": "comment.block.documentation.ts",
          "settings": {
            "foreground": "#92929290"
          }
        },
        {
          // text itself, row level
          "scope": "comment.line.double-slash.ts",
          "settings": {
            "foreground": "#92929290"
          }
        },
        {
          /* the symbols*/
          "scope": "punctuation.definition.comment.ts",
          "settings": {
            "foreground": "#FFCB6B"
          }
        },
        {
          // text itself, row level
          "scope": "comment.line.double-slash.js",
          "settings": {
            "foreground": "#92929290"
          }
        },
        {
          // text itself, row level
          "scope": "comment.block.json.comments",
          "settings": {
            "foreground": "#92929290"
          }
        },
        {
          // the symbols
          "scope": "punctuation.definition.comment.json.comments",
          "settings": {
            "foreground": "#FFCB6B"
          }
        }
      ]
    }
  },
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#b52e31"
    },
    {
      "name": "Auth0 Orange",
      "value": "#eb5424"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "C# Purple",
      "value": "#68217A"
    },
    {
      "name": "Gatsby Purple",
      "value": "#639"
    },
    {
      "name": "Go Cyan",
      "value": "#5dc9e2"
    },
    {
      "name": "Java Blue-Gray",
      "value": "#557c9b"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#00b3e6"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    }
  ],
  "workbench.iconTheme": "material-icon-theme",
  "prettier.trailingComma": "es5",
  "prettier.singleQuote": true,
  "javascript.format.semicolons": "insert",
  "typescript.format.semicolons": "insert",
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": null,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
    // "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "files.trimTrailingWhitespace": true,
  "prettier.quoteProps": "consistent",
  "editor.acceptSuggestionOnEnter": "off",
  "files.autoSaveDelay": 2200,
  "git.confirmSync": false,
  // Is git enabled
  "git.enabled": true,
  "git.path": "C:\\Program Files\\Git\\cmd\\git.exe",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.autoSave": "onFocusChange",
  "editor.minimap.maxColumn": 80,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "security.workspace.trust.banner": "never",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // "[csharp]": {
  //   "editor.defaultFormatter": "ms-dotnettools.csharp"
  // }
}